---
const currentYear = new Date().getFullYear();
const socials = [
  {
    name: "Instgram",
    link: "https://instgram.com/ut.sbi",
  },
  {
    name: "LinkedIn",
    link: "https://linkedin.com/company/utsbi",
  },
  {
    name: "GitHub",
    link: "https://github.com/utsbi",
  },
];
---

<footer
  class="px-6 py-6 md:px-32 2xl:px-80 relative border-t border-gray-200 font-OldStandardTT"
>
  <div class="container mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="text-center md:text-left mb-4 md:mb-0">
        <p class="text-sm text-gray-800">
          Research Driven, Professionally Inspired, and Student Powered
        </p>
        <p class="text-sm text-gray-800">
          &copy; {currentYear} Sustainable Building Initiative
        </p>
      </div>
      <div class="pl-3 flex space-x-4">
        {
          socials.map((social) => (
            <a
              href={social.link}
              aria-label={social.name}
              class="text-gray-800 hover:underline"
              target="_blank"
            >
              {social.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
